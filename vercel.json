{
    "version": 2,
    "builds": [
      {
        "src": "src/main.ts",
        "use": "@vercel/node"
      }
    ],
    "headers": [
      {
        "source": "/v1/(.*)",
        "headers": [
          { "key": "Access-Control-Allow-Credentials", "value": "true" },
          { "key": "Access-Control-Allow-Origin", "value": "*" },
          { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
          { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version" }
        ]
      }
    ],
    "rewrites": [
      { "source": "/v1/", "destination": "https://potits-chats-back.vercel.app/v1"}
    ],
    "redirects": [
      { "source": "/profil", "destination": "https://potits-chats.vercel.app/v1/profil", "permanent": true},
      { "source": "/connexion", "destination": "https://potits-chats.vercel.app/v1/connexion", "permanent": true},
      { "source": "/inscription", "destination": "https://potits-chats.vercel.app/v1/inscription", "permanent": true},
      { "source": "/contact", "destination": "https://potits-chats.vercel.app/v1/contact", "permanent": true},
      { "source": "/animaux", "destination": "https://potits-chats.vercel.app/v1/animaux", "permanent": true},
      { "source": "/", "destination": "https://potits-chats.vercel.app/v1", "permanent": true}
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }